{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "PyPasser (reCAPTCHA) Detector",
  "permissions": [
    "tabs",
    "webRequest",
    "browsingData",
    "postMessage",
    "storage",
    "cookies",
    "<all_urls>"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
  {
    "resources": ["config.json"],
    "matches": ["<all_urls>"]
  }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/recaptcha/api2/bframe*"
      ],
      "all_frames": true,
      "js": [
        "recaptcha_sender.js"
      ]
    }
  ]
}
